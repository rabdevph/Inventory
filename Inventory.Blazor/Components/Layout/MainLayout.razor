@inherits LayoutComponentBase

<div class="min-h-screen bg-gray-100 flex">
    <!-- Fixed Sidebar -->
    <div class="fixed inset-y-0 left-0 w-64 bg-white shadow-lg z-30">
        <NavMenu />
    </div>

    <!-- Main Content Area -->
    <div class="flex-1 ml-64 flex flex-col min-h-screen">
        <!-- Top Navigation Bar -->
        <header class="bg-white shadow-sm border-b border-gray-200 px-6 py-4 flex-shrink-0">
            <div class="flex items-center">
                <h1 class="text-xl font-semibold text-gray-800">Inventory Management</h1>
            </div>
        </header>

        <!-- Scrollable Main Content -->
        <main class="flex-1 p-6 overflow-y-auto">
            @Body
        </main>
    </div>
</div><!-- Error UI -->
<div id="blazor-error-ui" data-nosnippet
    class="fixed bottom-4 right-4 bg-red-500 text-white px-6 py-3 rounded-lg shadow-lg hidden">
    <div class="flex items-center space-x-3">
        <span>An unhandled error has occurred.</span>
        <a href="." class="underline hover:no-underline">Reload</a>
        <button class="ml-2 text-white hover:text-gray-200"
            onclick="document.getElementById('blazor-error-ui').style.display='none'">
            🗙
        </button>
    </div>
</div>
